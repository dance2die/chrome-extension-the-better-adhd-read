{
  "manifest_version": 3,
  "name": "Text Highlighter",
  "version": "1.0.0",
  "description": "Chrome/Edge extension to highlight a sentence, word, paragraph, or row in website text.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/index.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/index.js"
      ],
      "css": [
        "styles/theme.css",
        "styles/highlighter.css"
      ]
    }
  ]
}