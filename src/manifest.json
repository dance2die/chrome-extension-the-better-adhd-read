{
  "manifest_version": 3,
  "name": "Better ADHD Read",
  "version": "1.0.0",
  "description": "Highlight sentences, words, or paragraphs as you read â€” designed for focus and ADHD.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/index.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/index.js"
      ],
      "css": [
        "styles/theme.css",
        "styles/highlighter.css"
      ]
    }
  ]
}